print "[1] Italiano"
print "[2] English"
print
print "[3] Downloads"
print
print
print "[0] Esci / Quit"
print

try:
    select = input(": ")
    if select >= 4:
        print "Opzione non trovata!"
        raw_input("Premere un tasto per contiuare")
        os.system("./suiteAV")
except NameError:
    print "Comando non valido!"
    raw_input("Premere un tasto per continuare")
    os.system("./suiteAV")

def italiano():
	if select == 1:
		subprocess.call("init/lang/it/./italiano", shell=True)
italiano()

def english():
	if select == 2:
		subprocess.call("init/lang/en/./english", shell=True)
english()

def downloads():
	if select == 3:
		os.system("clear")
		subprocess.call("xdg-open Downloads/", shell=True)
		time.sleep(0.5)
		os.system("clear")
		os.system("./suiteAV")
downloads()

def close():
	if select == 0:
		subprocess.call("clear", shell=True)
		os.kill(os.getppid(), signal.SIGHUP)
		#os.system("exit")
		#return
close()
